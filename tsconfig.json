{
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "UMD",
        "outDir": "lib",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "downlevelIteration": true
